<% // create a list of javascript files to have the header load %>
<% var js_include = ['add_tournament.js']; %>
<% include header %>
<% include navigation %>

<section>
<h2>Add Tournament to schedule:</h2>

<!-- Note that this is a post -->
<form id="add_tournament_form" action="<%= action %>">
    <table id="login">
    <tr><td>Semester:</td><td><select id="semester" name="semester">
                                              <option value="Fall">Fall
                                              <option value="Winter">Winter
                                              <option value="Spring">Spring
                                              <option value="Summer">Summer
                                              </select><br />
                                  </td></tr>
            <tr><td>Year:</td>
            <td><input type="text" id="year" name="year" /></td>
            <tr><td>Tournament Name: </td>
            <td><input type="text" id="tname" name="tname" /></td> </tr>
            <tr><td>Location: </td>
            <td><input type="text" id="location" name="location" /></td> </tr>


            <tr><td>Result:</td>
            <td><input type="text" id="result" name="result" /></td>

    </table>
    <!-- not that we use a button here and not submit -->
    <input type="button" id="addTournamentBtn" value="Add" />
</form>

</section>

<div id="output" style="margin:10px;display:none"></div>

<% include footer %>
<% // create a list of javascript files to have the header load %>
<% var js_include = ['create_player.js']; %>

<% include header %>
<% include navigation %>
<section>
<h2>Add player to roster:</h2>

<!-- Note that this is a post -->
<form id="create_player_form" action="<%= action %>">
    <table id="login">
    <%= action %>
        <tr><td>USAU Number</td>
            <td><input type="text" id="usau_number" name="usau_number" /></td> </tr>
            <tr><td>Player Name:</td>
            <td><input type="text" id="name" name="name" /></td> </tr>
            <tr><td>Nickname:</td>
            <td><input type="text" id="nickname" name="nickname" /></td> </tr>
            <tr><td>Year:</td>
             <td><select id="year" name="year">
                    <option value="Freshman">Freshman
                    <option value="Sophomore">Sophomore
                    <option value="Junior">Junior
                    <option value="Senior">Senior

                </select><br />

                                         </td>
           </tr>
    </table>
    <br>
    <!-- not that we use a button here and not submit -->
    <input type="button" id="createPlayerBtn" value="Add Player" />
</form>
</section>
<div id="output" style="margin:10px;display:none"></div>

<% include footer %>